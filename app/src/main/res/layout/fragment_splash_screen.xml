    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/start_screen"
        android:scaleType="centerCrop"
        >


    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
